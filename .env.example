# Server Configuration
PORT=5000
NODE_ENV=development

# MongoDB Connection
MONGODB_URI=mongodb://localhost:27017/community-connector

# JWT Authentication
JWT_SECRET=your_jwt_secret_key
JWT_EXPIRE=30d

# Razorpay Integration (for subscription payments)
RAZORPAY_KEY_ID=your_razorpay_key_id
RAZORPAY_KEY_SECRET=your_razorpay_key_secret

# File Upload
MAX_FILE_SIZE=5000000 # 5MB in bytes
FILE_UPLOAD_PATH=./uploads

# Email Configuration (for verification emails)
SMTP_HOST=smtp.example.com
SMTP_PORT=587
SMTP_EMAIL=noreply@communityconnector.com
SMTP_PASSWORD=your_smtp_password
FROM_EMAIL=noreply@communityconnector.com
FROM_NAME=Community Connector